@model TaxBarAssociation.Models.ReferenceDocument
@{
    ViewData["Title"] = "AddDocument";
    Layout = "~/Views/Shared/_Dashboard.cshtml";
}

<br />
<br />
<div class="container">

    <div class="col-md-12">
        <div class="row">
            <div class="col-md-12">
                <div class="card">

                    <div class="card-header">
                        <h5>Upload the PDF File</h5>
                    </div>

                    <div class="card-body">
                        <form asp-action="AddDocument" method="post" enctype="multipart/form-data">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group">
                                <label asp-for="DocumentName"></label>
                                <input type="file" name="file" accept="application/pdf" class="form-control" />

                                <span asp-validation-for="DocumentName" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="DocumentYear"></label>
                                <select name="year" class="form-control">
                                    <option>Select Year</option>
                                    @foreach (var year in ViewBag.Years)
                                    {
                                        <option value="@year">@year</option>
                                    }

                                </select>
                                <span class="text-danger">@ViewBag.error</span>
                            </div>
                            <div class="form-group">
                                <input type="submit" class="btn btn-warning mt-3" value="Upload" />
                            </div>

                        </form>
                    </div>


                </div>
            </div>

        </div>
    </div>
</div>

