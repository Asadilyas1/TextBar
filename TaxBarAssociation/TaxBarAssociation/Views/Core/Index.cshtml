@{
    ViewData["Title"] = "CORE COMMITTEE";
    Layout = "~/Views/Shared/_Dashboard.cshtml";
}
<!-- Content Header (Page header) -->
<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">CORE COMMITTEE</h1>
            </div><!-- /.col -->
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Dashboard</a></li>
                    <li class="breadcrumb-item active">CORE COMMITTEE</li>
                </ol>
            </div><!-- /.col -->
        </div><!-- /.row -->
    </div><!-- /.container-fluid -->
</div>
<!-- /.content-header -->
<!-- Main content -->
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title" style="float: left">LIST OF CORE COMMITTEE</h3>
                        <button type="button" id="btnNew" style="float: right" class="btn btn-primary btn-sm">Add New Member</button>
                    </div>
                    <!-- /.card-header -->
                    <div class="card-body">
                        <div class="table-responsive">
                            <table id="CoreDatatable" width="100%" class="table table-bordered table-striped">
                                <thead>
                                    <tr>
                                        <th>S.No.</th>
                                        <th>Name</th>
                                        <th>Role</th>
                                        <th>Position</th>
                                        <th>Mobile</th>
                                        <th><i class="fa fa-gears"></i></th>
                                    </tr>
                                </thead>
                                <tbody>
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <!-- /.card-body -->
                </div>
                <!-- /.card -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
</section>
<!-- /.content -->
<div class="modal fade" id="modal-lg">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header bg-info">
                <h4 class="modal-title">Add New Member</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form class="form-horizontal" method="post" id="form" novalidate>
                <input type="hidden" name="Id" value="" />
                <div class="modal-body">
                    <div class="form-group row">
                        <div class="col-md-6">
                            <label for="inputEmail3" class="col-sm-2 col-form-label">Name</label>
                            <div class="col-sm-12">
                                <input type="text" name="Name" class="form-control" id="inputEmail3" placeholder="Name">
                                <span class="text-danger" id="nameErr"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <label for="inputPassword3" class="col-sm-3 col-form-label">Role</label>
                            <div class="col-sm-12">
                                <input type="text" name="Role" class="form-control" id="inputPassword3" placeholder="Ex. Advocate">
                                <span class="text-danger" id="roleErr"></span>
                            </div>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-md-6">
                            <label for="inputPassword3" class="col-sm-6 col-form-label">Position</label>
                            <div class="col-sm-12">
                                <input type="text" name="Position" class="form-control" id="inputPassword3" placeholder="Ex. Office Incharge">
                                <span class="text-danger" id="positionErr"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <label for="inputPassword3" class="col-sm-3 col-form-label">Mobile #</label>
                            <div class="col-sm-12">
                                <input type="text" name="Mobile" class="form-control" id="inputPassword3" placeholder="Mobile">
                                <span class="text-danger" id="mobileErr"></span>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer justify-content-between">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    <button type="submit" id="btnSave" class="btn btn-primary">Save changes</button>
                </div>
            </form>
        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>
@section Scripts {
    <script src="~/js/CoreDatatable.js" asp-append-version="true"></script>
}


